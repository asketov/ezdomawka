@using Common.Consts
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.Models.ViewModels.FavorSolutionVm



@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="item">
    <div class="col-lg-9 text-center">
        <ul>
            <li>
                <h3>@Model.Theme.Name</h3>
                <span>Об Услуге: @Model.Text</span>
            </li>
            <li>
                <span>
                    <b>Обновлена:</b>
                </span>
                <h6>@Model.Created.ToLocalTime().DateTime.ToString()</h6>
            </li>
            <li>
                <span>
                    <b>Стоимость:</b>
                </span>
                <h6>@Model.Price rub</h6>
            </li>
        </ul>


        <div class="col-lg-12 col-lg-12--flex">
            <fieldset class="button button--remove">
                <a asp-action="EditFavor" asp-controller="User" asp-route-id="@Model.Id">Редактировать</a>
            </fieldset>
            
            <fieldset class="button button--ban">
                <a asp-controller="User" asp-action="DeleteFavor"
                        asp-route-favorId="@Model.Id">Удалить услугу</a>
            </fieldset>
            <fieldset class="button button--contact">
                <button value="@Model.Connection" class="orange-button" id="contact">Контакты</button>
            </fieldset>
            <fieldset class="button button--contact">
                <button id="reloadFavor" value="@Model.Id">Обновить услугу</button>
            </fieldset>
            <fieldset class="button button--subjects">
                <button value="@Model.Id" class="orange-button checkSubjects">Предметы</button>
            </fieldset>
        </div>
    </div>
</div>