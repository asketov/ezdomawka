@using ModelsConfiguration
@model BLL.Models.ViewModels.ChangePasswordVm

@section Styles
{
    <link rel="stylesheet" href="~/css/pages/login.css">
    <link rel="stylesheet" href="~/css/pages/main.css">
}

<div class="contact-us section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6  align-self-center">
                <div class="section-heading">
                    <h6>Сброс пароля</h6>
                    <h2 class="no_extra_text_effects">Введите данные которые вы помните, и мы возобновим ваш пароль.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-us-content">
                    <form class="input_form" asp-action="ChangePassword" method="post">
                        <input asp-for="@Model.Code" hidden/>

                        <div class="row">
                            <div class="col-lg-12">
                                <fieldset>
                                     <input asp-for="Password" placeholder="Введите пароль *"/>
                                </fieldset>
                            </div>

                            <div class="col-lg-12">
                                <fieldset>
                                    <<input asp-for="ConfirmPassword" placeholder="Повторите пароль *"/>
                                </fieldset>
                            </div>

                            <div class="col-lg-12 col-lg-12--flex">
                                <fieldset class="login_button">
                                    <button type="submit" id="form-submit" class="orange-button">Поменять пароль</button>
                                </fieldset>

                                <fieldset class="login_button">
                                    <button id="clearFormButton" type="button" class="orange-button">Очистить</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>