@model BLL.Models.ViewModels.SubjectVm

@section Styles
{
    <link rel="stylesheet" href="~/css/pages/login.css"  asp-append-version="true">
    <link rel="stylesheet" href="~/css/pages/main.css"  asp-append-version="true">
}

<div class="contact-us section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6  align-self-center">
                <div class="section-heading">
                    <h6>Обновить Предмет</h6>
                    <h2 class="no_extra_text_effects">На этой странице вы можете обновить предмет для всех пользователей.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-us-content">
                    <form class="input_form" amethod="post" asp-controller="Admin" asp-action="EditSubject">
                        <input hidden asp-for="Id"/>
                        <div class="row">
                            <div class="col-lg-12">
                                <fieldset class="input_field">
                                    <input id="email" asp-for="Name" type="text" required placeholder="Введите новое название *"/>
                                    <span asp-validation-for="Name" class="text-danger text-danger--blue_style"></span>
                                </fieldset>
                            </div>

                            <div class="col-lg-12 col-lg-12--flex">
                                <fieldset class="login_button">
                                    <button type="submit" id="form-submit" class="orange-button">Обновить</button>
                                </fieldset>

                                <fieldset class="login_button">
                                    <button id="clearFormButton" type="button" class="orange-button">Очистить</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

