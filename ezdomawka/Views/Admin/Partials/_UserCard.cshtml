@model BLL.Models.ViewModels.UserVm

<div class="item">
    <div class="col-lg-9 text-center">
        <ul>
            <li class="text-center">
                <h5>@Model.Nick</h5>
                <span>@Model.Email</span>
            </li>
        </ul>


        <div class="col-lg-12 col-lg-12--flex">
            <fieldset class="button button--contact">
                <a asp-controller="Admin"
                   asp-action="FavorSolutions" asp-route-userId="@Model.Id">
                    Услуги
                </a>
            </fieldset>

            @if (Model.IsBanned)
            {
                <fieldset class="button button--remove">
                    <a
                       asp-controller="Admin"
                       asp-action="UnBanUser" asp-route-userId="@Model.Id">
                        Разбанить
                    </a>
                </fieldset>
            }
            else
            {
                <fieldset class="button button--ban">
                    <a
                       asp-controller="Admin"
                       asp-action="BanUser" asp-route-userId="@Model.Id">
                        Забанить
                    </a>
                </fieldset>
            }
        </div>
    </div>
</div>