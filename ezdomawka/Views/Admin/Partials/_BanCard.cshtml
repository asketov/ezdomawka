@using Common.Consts
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.Models.ViewModels.BanVm

<div class="item">
    <div class="col-lg-9 text-center">
        <ul>
            <li>
                <h3>До: @Model.BanTo</h3>
                <span>Создана: @Model.BanFrom</span>
            </li>
            <li>
                <span>
                    <b>Добавлена: @Model.Reason</b>
                </span>
                @if (Model.IsActual)
                {
                    <h6>Актуальна</h6>
                }
                else
                {
                    <h6>Неактуальна</h6>
                }
            </li>
        </ul>


        <div class="col-lg-12 col-lg-12--flex">
            @if (Model.IsActual)
            {
                <fieldset class="button button--navmenu">
                    <a asp-action="UnactiveBan" asp-controller="Admin" asp-route-banId="@Model.Id" asp-route-userId="@Model.UserId">Снять</a>
                </fieldset>
            }
        </div>
    </div>
</div>