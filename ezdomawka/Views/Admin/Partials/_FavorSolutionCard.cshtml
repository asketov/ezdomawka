@using Common.Consts
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.Models.ViewModels.FavorSolutionVm

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="item">
    <div class="col-lg-9 text-center">
        <ul>
            <li>
                <h3>@Model.Theme.Name</h3>
                <span>Об Услуге: @Model.Text</span>
            </li>
            <li>
                <span>
                    <b>Добавлена:</b>
                </span>
                <h6>@Model.Created.ToLocalTime().ToString().Split()[0]</h6>
            </li>
            <li>
                <span>
                    <b>Стоимость:</b>
                </span>
                <h6>@Model.Price rub</h6>
            </li>
        </ul>


        <div class="col-lg-12 col-lg-12--flex">
            <fieldset class="button button--remove">
                <a asp-controller="Admin" asp-action="FavorReportsPage" asp-route-favorId="@Model.Id">
                    Жалобы
                </a>
            </fieldset>

            <fieldset class="button button--ban">
                <a asp-action="DeleteFavor"
                   asp-route-userId="@Model.AuthorId"
                   asp-route-favorId="@Model.Id">
                    Удалить услугу
                </a>
            </fieldset>

            <fieldset class="button button--ban">
                <a asp-controller="Admin"
                   asp-action="BanUser" asp-route-userId="@Model.AuthorId">
                    Заблокировать
                </a>
            </fieldset>
        </div>
    </div>
</div>