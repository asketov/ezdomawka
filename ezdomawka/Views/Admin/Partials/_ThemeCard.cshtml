@model BLL.Models.ViewModels.ThemeVm

<div class="item">
    <div class="col-lg-9 text-center">
        <ul>
            <li class="text-center">
                <h5>@Model.Name</h5>
                <span>Id: @Model.Id</span>
            </li>
        </ul>


        <div class="col-lg-12 col-lg-12--flex">
            <fieldset class="button button--remove">
                <a asp-action="EditTheme"
                   asp-route-Id="@Model.Id"
                   class="ignore">
                    Редактировать
                </a>
            </fieldset>


            <fieldset class="button button--ban">
                <a asp-controller="Admin"
                   asp-action="DeleteTheme" asp-route-Id="@Model.Id">
                    Удалить
                </a>
            </fieldset>
        </div>
    </div>
</div>