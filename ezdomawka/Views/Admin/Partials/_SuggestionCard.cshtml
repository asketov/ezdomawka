@model BLL.Models.ViewModels.SuggestionVm

<div class="item">
    <div class="col-lg-12 text-center">
        <ul>
            <li class="text-center">
                <h5>@Model.Text</h5>
                <span>@Model.Connection</span>
            </li>
        </ul>


        <div class="col-lg-12 col-lg-12--flex">
            <fieldset class="button button--ban">
                <a asp-controller="Admin"
                   asp-action="FavorSolutions" asp-route-userId="@Model.Id">
                    Удалить
                </a>
            </fieldset>

            <fieldset class="button button--contact">
                <a asp-controller="Admin"
                   asp-action="BanHistoryPage" asp-route-userId="@Model.Id">
                    Сделать неактивным
                </a>
            </fieldset>
        </div>
    </div>
</div>